<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:context="com.dnp.sieta.ui.MartDetail2Activity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/warnaDark"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />
        </android.support.v7.widget.Toolbar>



    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">





        <LinearLayout
            android:id="@+id/statu3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/warnaDark"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                 android:text="Detail Order"
                android:textStyle="bold"
                android:id="@+id/text"
                />


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_below="@+id/statu3"
            android:id="@+id/card_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp"
            >


            <LinearLayout
                android:id="@+id/tablayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/warnaDark"
                    android:text="Product:"
                    android:textStyle="bold"
                    android:id="@+id/text1"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/warnaDark"
                    android:text="Premium Detox"
                    android:textStyle="bold"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_below="@+id/card_view"
            android:id="@+id/card_view2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp"
            >


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/warnaDark"
                    android:text="Price:"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/warnaDark"
                    android:text="Rp. 5.500.000"
                    android:textStyle="bold"
                    android:id="@+id/text2"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_below="@+id/card_view2"
            android:id="@+id/card_view3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp"
            >


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/warnaDark"
                    android:text="Quantity:"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/warnaDark"
                    android:text="1"
                    android:textStyle="bold"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_below="@+id/card_view3"
            android:id="@+id/card_view4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp"
            >


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/warnaDark"
                    android:text="Total:"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/warnaDark"
                    android:text="Rp. 5.500.000"
                    android:textStyle="bold"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <Button
            android:layout_below="@+id/card_view4"
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:background="@color/warnaDark"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_below="@+id/btn2"
            android:id="@+id/tex2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/warnaDark"
            android:text="Shipping"
            android:textStyle="bold"
            android:layout_margin="5dp"
            />
        <CheckBox
            android:layout_below="@+id/tex2"
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tex3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/checkbox"
            android:layout_alignBottom="@+id/checkbox"
            android:layout_toEndOf="@+id/checkbox"
            android:layout_toRightOf="@+id/checkbox"
            android:text="Centang bila alamat sesuai dengan data Anda"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />
        <android.support.design.widget.TextInputEditText
            android:layout_below="@+id/tex3"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Nama"
            android:textColor="@color/primary_text"
            android:textAlignment="center"/>
        <android.support.design.widget.TextInputEditText
            android:layout_below="@+id/name"
            android:id="@+id/name1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Alamat Lengkap"
            android:textColor="@color/primary_text"
            android:textAlignment="center"/>
        <android.support.design.widget.TextInputEditText
            android:layout_below="@+id/name1"
            android:id="@+id/name2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="No.HP"
            android:textColor="@color/primary_text"
            android:textAlignment="center"/>
        <android.support.design.widget.TextInputEditText
            android:layout_below="@+id/name2"
            android:id="@+id/name3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Provinsi"
            android:textColor="@color/primary_text"
            android:textAlignment="center"/>
        <android.support.design.widget.TextInputEditText
            android:layout_below="@+id/name3"
            android:id="@+id/name4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Kota"
            android:textColor="@color/primary_text"
            android:textAlignment="center"/>
        <android.support.design.widget.TextInputEditText
            android:layout_below="@+id/name4"
            android:id="@+id/name5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Kecamatan"
            android:textColor="@color/primary_text"
            android:textAlignment="center"/>
        <android.support.design.widget.TextInputEditText
            android:layout_below="@+id/name5"
            android:id="@+id/name6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Kelurahan"
            android:textColor="@color/primary_text"
            android:textAlignment="center"/>
        <android.support.design.widget.TextInputEditText
            android:layout_below="@+id/name6"
            android:id="@+id/name7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Kode Pos"
            android:textColor="@color/primary_text"
            android:textAlignment="center"/>
        <TextView
            android:layout_below="@+id/name7"
            android:id="@+id/tex4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/warnaDark"
            android:text="Shipping Cost : Rp.0"
            android:textStyle="bold"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_below="@+id/tex4"
            android:id="@+id/tex5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/warnaDark"
            android:text="Total: Rp.0"
            android:textStyle="bold"
            android:layout_margin="5dp"
            />
        <Button
            android:layout_below="@+id/tex5"
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Metode Pembayaran"
            android:background="@color/warnaDark"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            />
    </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>
