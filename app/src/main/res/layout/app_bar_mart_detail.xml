<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:context="com.dnp.sieta.ui.MartDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/warnaDark"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />
        </android.support.v7.widget.Toolbar>



    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/proargi_big" />
        <TextView
            android:layout_below="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proargi 9+ 30 pack"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/warnaDark"
            android:textStyle="bold"
            android:id="@+id/textViewheader"
            />
        <TextView
        android:layout_below="@+id/textViewheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp. 750.000"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/warnaDark"
        android:textStyle="bold"
        android:id="@+id/textViewheader2"
        />

        <TextView
            android:layout_below="@+id/textViewheader2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konten Deskripsi"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:id="@+id/textViewheader3"
            />
        <Button
            android:layout_below="@+id/textViewheader3"
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beli"
            android:background="@color/warnaDark"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:onClick="direct"
            />



    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>
